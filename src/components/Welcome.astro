---
import ControlsForm from './ControlsForm.astro';
import SignaturePreview from './SignaturePreview.astro';
import DownloadButtons from './DownloadButtons.astro';

const defaultData = {
  name: "KEN PATRICK GARCIA",
  title: "FULL STACK WEB DEVELOPER", 
  phone: "+63 991 xxx xxxx",
  email: "kengarcia.romegasolutions@gmail.com"
};
---

<!-- Load Lucide Icons -->
<script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>

<div class="min-h-screen bg-rs-neutral-100">
  <!-- Header with Romega Branding -->
  <div class="bg-white shadow-sm border-b border-rs-neutral-200">
    <div class="max-w-6xl mx-auto px-4 py-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <img src="/romega-logo.svg" alt="Romega Solutions" class="h-12 w-auto" />
          <div>
            <h1 class="font-merriweather text-2xl font-bold text-rs-primary-700">
              Email Signature Creator
            </h1>
            <p class="font-source-sans text-sm text-rs-neutral-600">
              Professional signatures for Romega Solutions team
            </p>
          </div>
        </div>
        
        <div class="flex items-center gap-3">
          <!-- Quick Reference Button -->
          <a 
            href="https://docs.google.com/spreadsheets/d/1S9SjoZQrfeu6k21rixZkoLuZ7tSzbdfsCiWgZ9bpK9I/edit?gid=0#gid=0"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-rs-accent-500 hover:bg-rs-accent-600 text-white px-4 py-2 rounded-lg font-source-sans font-medium transition-colors flex items-center gap-2"
          >
            <i data-lucide="users" class="w-4 h-4"></i>
            Team Directory
          </a>

          <!-- Logout Button -->
          <form action="/api/logout" method="POST" class="inline-block">
            <button
              type="submit"
              class="bg-rs-neutral-200 hover:bg-rs-neutral-300 text-rs-neutral-700 px-4 py-2 rounded-lg font-source-sans font-medium transition-colors flex items-center gap-2"
            >
              <i data-lucide="log-out" class="w-4 h-4"></i>
              Logout
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-4 py-12">
    <!-- Progress Steps -->
    <div class="mb-12">
      <div class="flex items-center justify-center mb-8">
        <div class="flex items-center space-x-4">
          <div class="flex items-center">
            <div class="w-8 h-8 bg-rs-primary-500 text-white rounded-full flex items-center justify-center font-bold text-sm">1</div>
            <span class="ml-2 font-source-sans text-rs-primary-700 font-medium">Create</span>
          </div>
          <div class="w-16 h-1 bg-rs-neutral-300"></div>
          <div class="flex items-center">
            <div class="w-8 h-8 bg-rs-neutral-300 text-rs-neutral-600 rounded-full flex items-center justify-center font-bold text-sm">2</div>
            <span class="ml-2 font-source-sans text-rs-neutral-600 font-medium">Download</span>
          </div>
          <div class="w-16 h-1 bg-rs-neutral-300"></div>
          <div class="flex items-center">
            <div class="w-8 h-8 bg-rs-neutral-300 text-rs-neutral-600 rounded-full flex items-center justify-center font-bold text-sm">3</div>
            <span class="ml-2 font-source-sans text-rs-neutral-600 font-medium">Setup Gmail</span>
          </div>
        </div>
      </div>
    </div>

    <div class="grid lg:grid-cols-2 gap-8">
      <!-- Left Column: Form -->
      <div class="bg-white rounded-2xl shadow-xl p-8 border border-rs-neutral-200 h-fit">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-8 h-8 bg-rs-primary-500 text-white rounded-full flex items-center justify-center font-bold text-sm">1</div>
          <h2 class="font-source-sans text-xl font-semibold text-rs-primary-700">
            Enter Your Details
          </h2>
        </div>
        
        <div class="mb-6">
          <p class="font-source-sans text-sm text-rs-neutral-600 mb-4">
            Fill in your information below. Make sure to use your official Romega Solutions email and phone number.
          </p>
        </div>

        <ControlsForm formData={defaultData} />
      </div>

      <!-- Right Column: Preview -->
      <div class="bg-white rounded-2xl shadow-xl p-8 border border-rs-neutral-200">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-8 h-8 bg-rs-accent-500 text-white rounded-full flex items-center justify-center">
            <i data-lucide="file-text" class="w-4 h-4"></i>
          </div>
          <h2 class="font-source-sans text-xl font-semibold text-rs-primary-700">
            Live Preview
          </h2>
        </div>
        
        <div class="mb-6">
          <SignaturePreview formData={defaultData} />
        </div>
        
        <div class="text-center">
          <DownloadButtons />
          <p class="font-source-sans text-xs text-rs-neutral-500 mt-2">
            Download as PNG image to use in your email signature
          </p>
        </div>
      </div>
    </div>

    <!-- Setup Instructions -->
    <div class="mt-12 bg-white rounded-2xl shadow-xl p-8 border border-rs-neutral-200">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-8 h-8 bg-rs-primary-600 text-white rounded-full flex items-center justify-center font-bold text-sm">3</div>
        <h2 class="font-source-sans text-xl font-semibold text-rs-primary-700">
          Add to Gmail Signature
        </h2>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Video Tutorial -->
        <div>
          <h3 class="font-source-sans font-semibold text-rs-primary-700 mb-4 flex items-center gap-2">
            <i data-lucide="play-circle" class="w-5 h-5"></i>
            Watch Tutorial
          </h3>
          <div class="aspect-video bg-rs-neutral-100 rounded-lg overflow-hidden border border-rs-neutral-200">
            <iframe 
              src="https://www.youtube.com/embed/i2AhII_yFP4" 
              title="Gmail Signature Setup Tutorial"
              class="w-full h-full"
              frameborder="0" 
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
              allowfullscreen>
            </iframe>
          </div>
        </div>

        <!-- Step-by-Step Instructions -->
        <div>
          <h3 class="font-source-sans font-semibold text-rs-primary-700 mb-4 flex items-center gap-2">
            <i data-lucide="list-checks" class="w-5 h-5"></i>
            Step-by-Step Guide
          </h3>
          <div class="space-y-4">
            <div class="flex gap-3">
              <div class="w-6 h-6 bg-rs-primary-500 text-white rounded-full flex items-center justify-center text-xs font-bold flex-shrink-0 mt-0.5">1</div>
              <div>
                <p class="font-source-sans text-sm text-rs-neutral-700">
                  <strong>Open Gmail Settings:</strong> Click the gear icon â†’ "See all settings"
                </p>
              </div>
            </div>
            <div class="flex gap-3">
              <div class="w-6 h-6 bg-rs-primary-500 text-white rounded-full flex items-center justify-center text-xs font-bold flex-shrink-0 mt-0.5">2</div>
              <div>
                <p class="font-source-sans text-sm text-rs-neutral-700">
                  <strong>Go to General tab:</strong> Scroll down to "Signature" section
                </p>
              </div>
            </div>
            <div class="flex gap-3">
              <div class="w-6 h-6 bg-rs-primary-500 text-white rounded-full flex items-center justify-center text-xs font-bold flex-shrink-0 mt-0.5">3</div>
              <div>
                <p class="font-source-sans text-sm text-rs-neutral-700">
                  <strong>Create new signature:</strong> Click "Create new" and name it "Romega Solutions"
                </p>
              </div>
            </div>
            <div class="flex gap-3">
              <div class="w-6 h-6 bg-rs-accent-500 text-white rounded-full flex items-center justify-center text-xs font-bold flex-shrink-0 mt-0.5">4</div>
              <div>
                <p class="font-source-sans text-sm text-rs-neutral-700">
                  <strong>Upload image:</strong> Click the image icon and upload your downloaded signature
                </p>
              </div>
            </div>
            <div class="flex gap-3">
              <div class="w-6 h-6 bg-rs-accent-500 text-white rounded-full flex items-center justify-center text-xs font-bold flex-shrink-0 mt-0.5">5</div>
              <div>
                <p class="font-source-sans text-sm text-rs-neutral-700">
                  <strong>Set as default:</strong> Choose signature for new emails and replies
                </p>
              </div>
            </div>
            <div class="flex gap-3">
              <div class="w-6 h-6 bg-rs-primary-600 text-white rounded-full flex items-center justify-center text-xs font-bold flex-shrink-0 mt-0.5">6</div>
              <div>
                <p class="font-source-sans text-sm text-rs-neutral-700">
                  <strong>Save changes:</strong> Scroll down and click "Save Changes"
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Quick Tips -->
      <div class="mt-8 bg-rs-primary-50 rounded-lg p-6 border border-rs-primary-200">
        <h4 class="font-source-sans font-semibold text-rs-primary-700 mb-3 flex items-center gap-2">
          <i data-lucide="lightbulb" class="w-5 h-5"></i>
          Pro Tips
        </h4>
        <ul class="space-y-2 font-source-sans text-sm text-rs-primary-600">
          <li class="flex items-start gap-2">
            <i data-lucide="check-circle" class="w-4 h-4 mt-0.5 text-rs-accent-500"></i>
            Make sure to use your official @romega-solutions.com email
          </li>
          <li class="flex items-start gap-2">
            <i data-lucide="check-circle" class="w-4 h-4 mt-0.5 text-rs-accent-500"></i>
            Test your signature by sending an email to yourself first
          </li>
          <li class="flex items-start gap-2">
            <i data-lucide="check-circle" class="w-4 h-4 mt-0.5 text-rs-accent-500"></i>
            Contact IT if you need help with your company email setup
          </li>
          <li class="flex items-start gap-2">
            <i data-lucide="check-circle" class="w-4 h-4 mt-0.5 text-rs-accent-500"></i>
            Keep your signature updated when your role changes
          </li>
        </ul>
      </div>
    </div>

    <!-- Support Section -->
    <div class="mt-8 bg-rs-neutral-50 rounded-xl p-6 border border-rs-neutral-200">
      <div class="text-center">
        <h3 class="font-source-sans font-semibold text-rs-primary-700 mb-2 flex items-center justify-center gap-2">
          <i data-lucide="help-circle" class="w-5 h-5"></i>
          Need Help?
        </h3>
        <p class="font-source-sans text-sm text-rs-neutral-600 mb-4">
          Contact our IT team or HR for assistance with your email signature setup
        </p>
        <div class="flex justify-center gap-4">
          <a 
            href="mailto:it@romega-solutions.com" 
            class="bg-rs-primary-500 hover:bg-rs-primary-600 text-white px-4 py-2 rounded-lg font-source-sans text-sm font-medium transition-colors flex items-center gap-2"
          >
            <i data-lucide="mail" class="w-4 h-4"></i>
            Contact IT
          </a>
          <a 
            href="mailto:hr@romega-solutions.com" 
            class="bg-rs-accent-500 hover:bg-rs-accent-600 text-white px-4 py-2 rounded-lg font-source-sans text-sm font-medium transition-colors flex items-center gap-2"
          >
            <i data-lucide="users" class="w-4 h-4"></i>
            Contact HR
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <div class="bg-white border-t border-rs-neutral-200 py-6">
    <div class="max-w-6xl mx-auto px-4 text-center">
      <p class="font-source-sans text-sm text-rs-neutral-500 flex items-center justify-center gap-2">
        Created with 
        <i data-lucide="heart" class="w-4 h-4 text-red-500"></i>
        by <span class="text-rs-primary-600 font-medium">Ken Patrick Garcia</span> for Romega Solutions
      </p>
    </div>
  </div>
</div>

<script type="module">
  // Initialize Lucide icons
  lucide.createIcons();

  // Simple state sync between form and preview
  const form = document.querySelector('form');
  const fields = ["name", "title", "phone", "email"];

  if (form) {
    form.addEventListener('input', (e) => {
      const fieldName = e.target.name;
      const fieldValue = e.target.value;
      
      if (fields.includes(fieldName)) {
        const target = document.querySelector(`[data-field="${fieldName}"]`);
        
        if (target) {
          target.textContent = fieldValue;
        }
      }
    });
  }

  // Progress indicator
  const downloadBtn = document.getElementById('download-btn');
  if (downloadBtn) {
    downloadBtn.addEventListener('click', () => {
      // Update progress to step 2
      setTimeout(() => {
        const step2 = document.querySelector('.progress-step-2');
        if (step2) {
          step2.classList.remove('bg-rs-neutral-300', 'text-rs-neutral-600');
          step2.classList.add('bg-rs-accent-500', 'text-white');
        }
      }, 1000);
    });
  }
</script>